# Healthcare SaaS Platform - Hostinger MySQL Configuration
# Copy this file to .env and update with your Hostinger database credentials

# Hostinger MySQL Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=your_hostinger_db_user
DB_PASSWORD=your_hostinger_db_password
DB_NAME=your_hostinger_db_name
DB_SYNCHRONIZE=false
DB_LOGGING=false

# Alternative Hostinger MySQL Configuration (if using external host)
# DB_HOST=mysql.hostinger.com
# DB_PORT=3306
# DB_USERNAME=u123456789_healthcare
# DB_PASSWORD=your_secure_password
# DB_NAME=u123456789_healthcare

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-hostinger
JWT_EXPIRES_IN=24h

# Application Configuration
NODE_ENV=production
PORT=3001
FRONTEND_URL=https://your-domain.com

# Encryption Configuration
ENCRYPTION_KEY=your-encryption-key-change-in-production-hostinger

# Redis Configuration (optional - Hostinger may not provide Redis)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# Email Configuration (using Hostinger's SMTP)
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=587
SMTP_USER=your-email@your-domain.com
SMTP_PASS=your-email-password

# File Storage Configuration (using Hostinger's storage)
UPLOAD_PATH=/public_html/uploads
MAX_FILE_SIZE=10485760

# Security Configuration
CORS_ORIGIN=https://your-domain.com
SESSION_SECRET=your-session-secret-hostinger

# Monitoring Configuration
LOG_LEVEL=info
ENABLE_SWAGGER=false

# Hostinger Specific Settings
HOSTINGER_MODE=true
DB_SSL=false
DB_POOL_SIZE=10
DB_POOL_TIMEOUT=30000
